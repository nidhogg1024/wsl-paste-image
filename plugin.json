{
    "pluginName": "终端贴图助手",
    "description": "截图后自动转为 WSL 路径，在终端中粘贴即可引用图片",
    "author": "nidhogg1024",
    "homepage": "https://github.com/nidhogg1024/wsl-paste-image",
    "preload": "preload.js",
    "logo": "logo.png",
    "version": "1.0.0",
    "pluginSetting": {
        "single": true
    },
    "features": [
        {
            "code": "wsl-paste-screenshot",
            "explain": "截图并转换为 WSL 路径（自动复制到剪贴板）",
            "cmds": [
                "终端贴图",
                "截图转路径",
                "WSL 贴图",
                "wsl paste",
                "screenshot to path",
                "贴图"
            ],
            "mode": "none"
        },
        {
            "code": "wsl-paste-clipboard",
            "explain": "将剪贴板中的图片转为 WSL 路径",
            "cmds": [
                "剪贴板转路径",
                "clipboard to path",
                "剪贴板图片"
            ],
            "mode": "none"
        }
    ]
}
